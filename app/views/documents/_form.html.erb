<%= form_for(@new_document) do |f| %>
  <div class="field">
    <%= f.label :provided_tags, 'Tags (comma-separated)' %><br>
    <%= f.text_field :provided_tags, size: 30 %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

  <p id="notice"><%= notice %></p>
  <p id="alert"><%= alert %></p>
<% end %>
