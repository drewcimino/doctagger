<div id="upload_menu">
  <span class="dropdown-link">[+] Upload New Document</span>
  <div class="linked-dropdown">
    <%= render 'form' %>
  </div>
  <p id="notice"><%= notice %></p>
  <p id="alert"><%= alert %></p>
</div>

<div id="document_listing">
  <h1>Listing Documents</h1>

  <table>
    <thead>
      <tr>
        <th>Uploaded</th>
        <th>Tags</th>
        <th>Tag Frequency</th>
        <th>Content</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @documents.each do |document| %>
        <tr>
          <td><%= document.created_at %></td>
          <td><%= document.provided_tags %></td>
          <td><%= document.tag_frequency %></td>
          <td><%= document.content %></td>
          <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
