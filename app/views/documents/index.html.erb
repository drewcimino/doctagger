<script type='application/javascript'>
  var tagData = {};

  <% @documents.each do |doc| %>
    tagData['document_<%= doc.id%>'] = <%= doc.tag_frequency.to_json.html_safe %>
  <% end %>
</script>

<div id="upload_menu">
  <span class="dropdown-link">[+] Upload New Document</span>
  <div class="linked-dropdown">
    <%= render 'form' %>
  </div>
  <p id="notice"><%= notice %></p>
  <p id="alert"><%= alert %></p>
</div>

<div id="document_listing">
  <h1>Listing Documents</h1>

  <table id='document_table'>
    <thead>
      <tr>
        <th>Uploaded</th>
        <th>Tags</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @documents.each do |document| %>
        <tr>
          <td class='timestamp'><%= document.created_at.strftime('%D %R') %></td>
          <td class='tag-frequency'>
            <div class='tag-chart' tag-data-id="document_<%= document.id %>"></div>
          </td class='actions'>
          <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
